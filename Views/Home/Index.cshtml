        //opcii za markerot
        var marker = new google.maps.Marker({
            position: blatlng,
            title: name,
            map: map,
            info: name,
            icon: 'Content/Images/pharmacy-building.png'
        });

        //dodadi go markerot vo globalnata niza
        pharmacies.push(marker);
    }


</script>
